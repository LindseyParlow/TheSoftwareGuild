@model CarDealership.UI.Models.ContactUsVM

@{
	ViewBag.Title = "Contact";
}

@section ContactScripts {
	<script src="~/Scripts/JS for Views/Home_Contact.js"></script>
}


<div class="container">
	<div class="row">
		@using (Html.BeginForm("Contact", "Home"))
		{
			<div class="col-md-5">
				<div class="row">
					<div class="form-horizontal">
						<h1>Contact Us</h1>
						<br />
					</div>
				</div>
				<div class="row">
					<div class="form-horizontal">
						<p>
							<label>Name</label>
						</p>
						<p>
							@Html.TextBoxFor(m => m.ContactUs.FullName, new { @class = "form-control" })
						</p>
						<br />
					</div>
				</div>
				<div class="row">
					<div class="form-horizontal">
						<p>
							<label>Email</label>
						</p>
						<p>
							@Html.TextBoxFor(m => m.ContactUs.Email, new { @class = "form-control" })
						</p>
						<br />
					</div>
				</div>
				<div class="row">
					<div class="form-horizontal">
						<p>
							<label>Phone</label>
						</p>
						<p>
							@Html.TextBoxFor(m => m.ContactUs.Phone, new { @class = "form-control" })
						</p>
						<br />
					</div>
				</div>
				<div class="row">
					<div class="form-horizontal">
						<p>
							<label>Message</label>
						</p>
						<p>
							@Html.TextAreaFor(m => m.ContactUs.Message, new { @class = "form-control" })
						</p>
						<br />
					</div>
				</div>
			</div>
		}
		<div class="col-md-offset-6">
			<div class="col-md-5">
				<div class="row">
					<div class="form-horizontal">
						<h1>MAP PICTURE</h1>
						<br />
					</div>
				</div>
				<div class="row">
					<div class="form-horizontal">
						<address>
							19371 Blackfoot St<br />
							Oak Grove, MN, 55303<br />
						</address>
						<address>
							Sales: 753-555-1457<br />
							Service: 763-555-1458<br />
						</address>
						<br />
					</div>
				</div>
				
			</div>
	</div>
</div>

