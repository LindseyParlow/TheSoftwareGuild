@model IEnumerable<CarDealership.Models.VehicleMake>
@{
    ViewBag.Title = "Makes";
}

@section MakeScripts {
	<script src="~/Scripts/JS for Views/Admin_Make.js"></script>
}
<div class="container">
	<div class="row">
		<div class="col-md-12">
			<h1 style="font-size:50px">Makes</h1>
			<div style="border: 2px solid black; padding: 20px">
				<p>
					New Make
					<input class="text" id="newMakeInput" />
					<button class="btn btn-primary">Save</button>
				</p>
			</div>
			<br/>
			<table border="1">
				<thead>
					<tr>
						<th style="width: 100px">Make</th>
						<th style="width: 100px">Date Added</th>
						<th style="width: 200px">User</th>
						<th style="width: 200px"></th>
					</tr>
				</thead>
				<tbody>
					@foreach (var make in Model)
					{
						<tr>
							<td>@make.VehicleMakeDescription</td>
							<td>@make.DateAdded.ToShortDateString()</td>
							<td>@make.User.UserName</td>
						</tr>
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

